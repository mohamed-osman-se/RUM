<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - RUM</title>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RUM.styles.css" asp-append-version="true" />

    <style>
        .navbar-brand img {
            height: 40px;
            width: 40px;
            object-fit: contain;
        }

        .navbar-brand span {
            font-size: clamp(1.25rem, 2vw, 1.5rem);
            font-weight: 700;
            color: #D72638;
        }

        .nav-link {
            color: #4b5563;
            font-weight: 500;
            font-size: clamp(1rem, 1.5vw, 1.125rem);
            position: relative;
            padding: 0.5rem 0.75rem;
        }

        .nav-link.active,
        .nav-link:focus,
        .nav-link:hover {
            color: #D72638;
            text-decoration: none;
        }

        .nav-link.active::after {
            content: "";
            display: block;
            width: 100%;
            height: 3px;
            background: #D72638;
            border-radius: 2px;
            position: absolute;
            bottom: 0;
            left: 0;
        }

        .container {
            max-width: 960px;
            padding-left: 1rem;
            padding-right: 1rem;
        }

        @@media (max-width: 576px) {
            .navbar-brand span {
                font-size: 1.25rem;
            }

            .nav-link {
                font-size: 1rem;
            }
        }
    </style>

    @RenderSection("Styles", required: false) 
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center px-3 px-md-4">

                <a class="navbar-brand d-flex align-items-center gap-2" href="/" aria-label="RUM Home">
                    <img src="~/favicon.ico" alt="RUM Logo" />
                    <span>RUM</span>
                </a>

                <div>
                    <a asp-controller="Home" asp-action="About" 
                       class="nav-link @(ViewData["Title"]?.ToString() == "About This App" ? "active" : "")" 
                       aria-current="page">
                        About
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container text-center">
            &copy; 2025 - RUM
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
