@model RUM.DTOs.LoginUserDTO

@{
    ViewData["Title"] = "Login";
}

@section Styles {
    <style>
        body {
            background: #fdfbff;
            font-family: 'Segoe UI', 'Arial', sans-serif;
        }

        .login-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            padding: 40px 30px;
            max-width: 500px;
            margin: 60px auto;
        }

        .login-card h2 {
            text-align: center;
            font-size: 30px;
            font-weight: 800;
            background: linear-gradient(to right, #8b5cf6, #ec4899, #ef4444);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            display: block;
            margin-bottom: 8px;
            color: #1e1e2f;
        }

        input {
            width: 100%;
            padding: 14px;
            border-radius: 12px;
            border: 1px solid #f0abfc;
            font-size: 16px;
            background: #fdf4ff;
            color: #1e1e2f;
            outline: none;
            transition: border 0.3s ease;
        }

        input:focus {
            border-color: #d946ef;
        }

        .text-danger {
            font-size: 14px;
            color: #b91c1c;
            margin-top: 6px;
            display: block;
        }

        button {
            background: linear-gradient(to right, #ec4899, #ef4444);
            color: white;
            border: none;
            padding: 14px 26px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 10px;
            cursor: pointer;
            width: 100%;
            transition: opacity 0.3s ease;
        }

        button:hover {
            opacity: 0.85;
        }

        .signup-link {
            text-align: center;
            margin-top: 15px;
            font-size: 14px;
            color: #4b5563;
        }

        .signup-link a {
            color: #8b5cf6;
            font-weight: 600;
            text-decoration: none;
        }

        .signup-link a:hover {
            text-decoration: underline;
        }

        @@media (max-width: 600px) {
            .login-card {
                padding: 25px 20px;
            }

            button {
                font-size: 14px;
                padding: 12px 20px;
            }
        }
    </style>
}

<div class="login-card">
    <h2>Login</h2>

    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit">Login</button>
    </form>

    <div class="signup-link">
        Donâ€™t have an account?
        <a asp-controller="Account" asp-action="Create">Create one</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
